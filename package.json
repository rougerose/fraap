{
  "name": "fraap",
  "version": "1.0.0",
  "main": "index.js",
  "repository": "https://github.com/rougerose/fraap.git",
  "author": "christophe le drean <christophe@rouge-rose.net>",
  "license": "GPLv3",
  "private": true,
  "scripts": {
    "build": "NODE_ENV=production npm-run-all compile",
    "dev": "npm-run-all -s compile",
    "clean": "rimraf theme/dist/css theme/dist/js",
    "clean:tmp": "rimraf theme/dist/css/index.css",
    "compile": "npm-run-all -s clean compile:* clean:tmp",
    "compile:js": "rollup -c",
    "compile:scss": "sass --no-source-map --load-path=node_modules theme/src/scss/index.scss theme/dist/css/index.css",
    "compile:postcss": "postcss theme/dist/css/index.css -o theme/dist/css/fraap.css",
    "server": "npm-run-all -p server:init dev watch:scss watch:js",
    "server:init": "browser-sync start -p 'http://localhost:8888/fraap.exp.dev' -f 'squelettes/**/*.html'",
    "server:reload": "browser-sync reload",
    "watch": "npm-run-all -p dev watch:scss",
    "watch:js": "chokidar 'theme/src/js/**/*.js' -c 'npm run compile:js && npm run server:reload'",
    "watch:scss": "chokidar 'theme/src/scss/**/*.scss' -c 'npm run compile:scss && npm run compile:postcss && npm run clean:tmp && npm run server:reload'"
  },
  "browserslist": [
    ">0.25%"
  ],
  "devDependencies": {
    "@rollup/plugin-node-resolve": "^13.1.3",
    "autoprefixer": "^10.4.4",
    "body-scroll-lock": "^4.0.0-beta.0",
    "browser-sync": "^2.27.9",
    "chokidar-cli": "^3.0.0",
    "css-reset": "github:rougerose/css-reset",
    "gorko": "^0.9.1",
    "hamburgers": "^1.1.3",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.4.12",
    "postcss-cli": "^9.1.0",
    "postcss-csso": "^6.0.0",
    "rimraf": "^3.0.2",
    "rollup": "^2.70.1",
    "rollup-plugin-terser": "^7.0.2",
    "sass": "^1.35.1",
    "sass-mq": "^6.0.0",
    "sass-rem": "^3.0.0"
  }
}
