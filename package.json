{
  "name": "fraap",
  "version": "1.0.0",
  "main": "index.js",
  "repository": "https://github.com/rougerose/fraap.git",
  "author": "christophe le drean <christophe@rouge-rose.net>",
  "license": "GPLv3",
  "private": true,
  "type": "module",
  "scripts": {
    "bs": "browser-sync start -c package-scripts/browsersync.config.cjs",
    "build": "run-s clean && run-p build:* && run-s css",
    "build:js": "rollup -c package-scripts/rollup.config.js",
    "build:scss": "sass --no-source-map --load-path=node_modules theme/src/scss/index.scss theme/dist/css/fraap.tmp.css",
    "clean": "rimraf -g 'theme/dist/{css/*,js/*}'",
    "copy": "node package-scripts/copy.mjs",
    "css": "lightningcss --minify --bundle --browserslist theme/dist/css/fraap.tmp.css -o theme/dist/css/fraap.css",
    "publish": "NODE_ENV=production run-s build",
    "watch": "run-p build bs watch:*",
    "watch:scss": "chokidar 'theme/src/scss/**/*.scss' -c 'npm run build:scss && npm run css'",
    "watch:js": "chokidar 'theme/src/js/**/*.js' -c 'npm run build:js'"
  },
  "browserslist": [
    "defaults"
  ],
  "devDependencies": {
    "@rollup/plugin-commonjs": "^28.0.3",
    "@rollup/plugin-node-resolve": "^16.0.1",
    "@rollup/plugin-terser": "^0.4.4",
    "@splidejs/splide": "^4.1.3",
    "a11y-dialog": "^8.0.4",
    "body-scroll-lock-upgrade": "^1.1.0",
    "browser-sync": "^3.0.4",
    "chokidar-cli": "^3.0.0",
    "cpy": "^11.1.0",
    "css-reset": "github:rougerose/css-reset",
    "dom-parents": "^1.1.4",
    "focus-visible": "^5.2.0",
    "gorko": "^0.9.1",
    "gutenberg-css": "^0.6.1",
    "leaflet-sleep": "^0.5.2",
    "lightningcss-cli": "^1.29.3",
    "menuspy": "^1.3.0",
    "modujs": "^1.4.2",
    "npm-run-all2": "^7.0.2",
    "prettier": "^3.5.3",
    "rimraf": "^6.0.1",
    "rollup": "^4.40.1",
    "sass": "^1.77.4",
    "sass-mq": "^7.0.0-beta.1",
    "smoothscroll-polyfill": "^0.4.4"
  }
}
