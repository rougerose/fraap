{
  "name": "fraap",
  "version": "1.0.0",
  "main": "index.js",
  "repository": "https://github.com/rougerose/fraap.git",
  "author": "christophe le drean <christophe@rouge-rose.net>",
  "license": "GPLv3",
  "private": true,
  "scripts": {
    "build": "NODE_ENV=production npm run compile",
    "compile": "npm run compile:css && npm run compile:js",
    "compile:css": "npm run compile:scss && npm run compile:postcss",
    "compile:scss": "sass --no-source-map --load-path=node_modules theme/src/scss/index.scss theme/src/css/index.css",
    "compile:postcss": "postcss theme/src/css/index.css -o theme/dist/css/fraap.css",
    "compile:js": "rollup -c",
    "copy": "node copy.mjs",
    "server": "npm run server:init & npm run watch",
    "server:init": "browser-sync start -p 'http://localhost:8888/fraap.nursit.dev/'",
    "server:reload": "browser-sync reload",
    "watch": "npm run compile && npm run watch:files",
    "watch:files": "npm run watch:scss & npm run watch:js & npm run watch:html",
    "watch:html": "chokidar 'squelettes/**/*.html' -c 'npm run server:reload'",
    "watch:js": "chokidar 'theme/src/js/**/*.js' -c 'npm run compile:js && npm run server:reload'",
    "watch:scss": "chokidar 'theme/src/scss/**/*.scss' -c 'npm run compile:scss && npm run compile:postcss && npm run server:reload'"
  },
  "browserslist": [
    "defaults, not ie 11"
  ],
  "devDependencies": {
    "@rollup/plugin-commonjs": "^22.0.0",
    "@rollup/plugin-node-resolve": "^13.3.0",
    "a11y-dialog": "^7.4.0",
    "autoprefixer": "^10.4.7",
    "body-scroll-lock": "^4.0.0-beta.0",
    "browser-sync": "^2.27.10",
    "chokidar-cli": "^3.0.0",
    "cpy": "^9.0.1",
    "css-reset": "github:rougerose/css-reset",
    "focus-visible": "^5.2.0",
    "gorko": "^0.9.1",
    "leaflet-sleep": "^0.5.2",
    "postcss": "^8.4.14",
    "postcss-cli": "^9.1.0",
    "postcss-csso": "^6.0.0",
    "rollup": "^2.74.1",
    "rollup-plugin-terser": "^7.0.2",
    "sass": "^1.35.1",
    "sass-mq": "^6.0.0",
    "smoothscroll-polyfill": "^0.4.4",
    "swiper": "^8.1.6"
  }
}
